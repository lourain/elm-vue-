border-1px($color)
    position: relative
    &::after
        position: absolute
        display: block
        content: ""
        width: 100%
        left: 0
        bottom: 0
        border-top: 1px solid $color

border-none()
	&::after
	  display: none
bg-image($url)
    background-image: url($url+"@2x.png")
    @media (-webkit-device-pixcel-ratio:3),(device-pixcel-ratio:3)
        background-image: url($url+"@3x.png")